package com.smhrd.controller;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.smhrd.database.DAO;
import com.smhrd.model.MemberVO;

public class EmailCheck implements Command {

	@Override
	public String execute(HttpServletRequest request, HttpServletResponse response) {
		
		MemberVO sessionVo = (MemberVO)request.getSession().getAttribute("member");
		String email =  sessionVo.getEmail();
		
		MemberVO vo = new MemberVO();
		vo.setEmail(email);
		
		DAO dao = new DAO();
		MemberVO resultVO = dao.EmailCheck(vo);
		
		if (resultVO != null) {
			HttpSession session = request.getSession();
			session.setAttribute("member", resultVO);
			return "redirect:/gomain.do";
		} else {
			return "redirect:/gomain.do";
		}
	}
}
